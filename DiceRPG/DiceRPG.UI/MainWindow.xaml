<Window x:Class="DiceRPG.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:viewModels="clr-namespace:DiceRPG.UI.ViewModels"
        mc:Ignorable="d"
        Title="DiceRPG - Gerenciador de Fichas"
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Window.DataContext>
        <viewModels:MainViewModel/>
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header com tema e tÃ­tulo -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
            <materialDesign:PackIcon Kind="DiceMultiple" Width="48" Height="48" 
                                     Margin="0,0,15,0" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
            <TextBlock Text="DiceRPG - Gerenciador de Fichas" FontSize="28" FontWeight="Bold" 
                       VerticalAlignment="Center"/>

            <ToggleButton x:Name="ThemeToggle" 
                         Margin="20,0,0,0"
                         materialDesign:ToggleButtonAssist.OnContent="ðŸŒ™"
                         materialDesign:ToggleButtonAssist.OffContent="â˜€ï¸"
                         IsChecked="{Binding IsDarkTheme}"
                         Style="{StaticResource MaterialDesignSwitchToggleButton}"
                         ToolTip="Alternar tema claro/escuro"/>
        </StackPanel>

        <!-- TabControl principal -->
        <TabControl Grid.Row="1" 
                   ItemsSource="{Binding Abas}"
                   SelectedIndex="{Binding SelectedTabIndex}"
                   materialDesign:TabControlAssist.Underline="Accent"
                   materialDesign:TabControlAssist.HasFilledTab="True"
                   Padding="10">

            <TabControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="{Binding Icone}" Width="20" Height="20" 
                                                 Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding NomeAba}" FontSize="14"/>
                    </StackPanel>
                </DataTemplate>
            </TabControl.ItemTemplate>

            <TabControl.ContentTemplate>
                <DataTemplate>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                 HorizontalScrollBarVisibility="Auto">
                        <ContentControl Content="{Binding .}"/>
                    </ScrollViewer>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>

        <!-- Status bar -->
        <StatusBar Grid.Row="2" Margin="0,10,0,0">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>